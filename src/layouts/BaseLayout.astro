---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

type Props = {
  title: string;
  description: string;
  image?: ImageMetadata;
};

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QV4FGCX0ZG"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-QV4FGCX0ZG');
    </script>
    <BaseHead title={title} description={description} image={image} />
  </head><body
    class="min-h-screen text-foreground bg-background font-sans antialiased flex flex-col"
  >
    <Header />
    <div class="flex-1">
      <slot />
    </div>
    <Footer />
  </body>
</html>
