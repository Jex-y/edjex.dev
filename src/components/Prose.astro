---
import clsx from 'clsx';
---

<div
  class={clsx(
    // General
    'mx-auto prose max-w-full text-foreground',
    // Headings
    'prose-headings:text-foreground prose-headings:font-semibold prose-headings:mt-0 prose-headings:mb-2 prose-headings:leading-tight',
    // Paragraphs
    'prose-p:text-md prose-p:leading-relaxed prose-p:mb-4',
    // Links
    // Show link emoji
    'prose-a:no-underline prose-a:text-primary prose-a:font-semibold prose-a:hover:underline prose-a:after:content-["ðŸ”—"] prose-a:after:text-sm',
    // Code
    'prose-code:font-mono prose-code:text-accent-foreground prose-code:bg-accent/80 prose-code:px-1 prose-code:py-0.5 prose-code:rounded-md',
    // Images, display alt text as caption
    'prose-img:rounded-lg prose-img:my-2 prose-img:mx-auto',
    // Blockquotes
    'prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:px-4 prose-blockquote:py-2 prose-blockquote:text-lg prose-blockquote:text-foreground/80',
    // Bold
    'prose-strong:font-bold prose-strong:text-accent-foreground',
    // Footnotes / sidenotes. If md or larger, footnotes will be displayed as sidenotes.
  )}
>
  <slot />
</div>
